##
# This file should modify the following variables
# as appropriate:
#   - CPPFLAGS
#   - GTEST_CXXFLAGS

ifeq (g++,$(CC_TYPE))
  CPPFLAGS += -Wno-unused-function
  VERSION := $(CC_MAJOR).$(CC_MINOR)
endif

ifeq (clang++,$(CC_TYPE))
  CPPFLAGS += -Wno-unknown-warning-option
  CPPFLAGS += -Wno-unused-function
  CPPFLAGS += -Wno-tautological-compare
  CPPFLAGS += -Wsign-compare
  CPPFLAGS += -Wno-unused-local-typedef
endif
